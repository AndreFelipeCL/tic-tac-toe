{
	"breadcrumbs.enabled": true,
	"breadcrumbs.filePath": "on",
	"diffEditor.wordWrap": "on",

	"editor.accessibilitySupport": "off",
	"editor.columnSelection": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Droid Sans Mono', 'monospace', monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 13,
	"editor.insertSpaces": false,
	"editor.largeFileOptimizations": true,
	"editor.lineHeight": 19,
	"editor.minimap.showSlider": "always",
	"editor.parameterHints.enabled": true,
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": true
	},
	"editor.renderLineHighlight": "all",
	"editor.rulers": [140, 160],
	"editor.suggestSelection": "first",
	"editor.tabCompletion": "on",
	"editor.tabSize": 4,
	"editor.wordWrapColumn": 140,
	"editor.wordWrap": "on",

	"explorer.autoReveal": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,

	"emmet.showSuggestionsAsSnippets": true,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"razor": "html",
		"plaintext": "pug"
	},

	"files.exclude": {
		"**/.classpath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/.factorypath": true,
		"**/.gitignore": false,
		"**/package.json": false,
		"**/package-lock.json": false,
		"**/yarn.lock": false,
		".vscode": true,
		".babelrc": false,
		".dockerignore": true,
		".editorconfig": true,
		".eslintignore": true,
		"jest.config.js": true,
		"jsconfig.json": true,
		"README.nd": true,
		"sonar-project.js": true,
		"node_modules": true,
		"public": false,
		"build": false,
		".storybook": true
	},

		"git.enableSmartCommit": true,
	"git.confirmSync": false,

	"html.autoClosingTags": true,
	"html.suggest.html5": true,

	"javascript.autoClosingTags": true,
	"javascript.preferences.quoteStyle": "single",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.suggest.autoImports": true,
	"javascript.suggest.includeCompletionsForImportStatements": true,
	"javascript.suggest.paths": true,

	"redhat.telemetry.enabled": true,

	"security.workspace.trust.banner": "never",
	"security.workspace.trust.untrustedFiles": "open",

	// Terminal Configuration
	"terminal.integrated.allowMnemonics": true,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.fontWeight": "normal",
	"terminal.integrated.fontWeightBold": "600",

	"typescript.suggest.autoImports": true,
	"typescript.suggest.includeCompletionsForImportStatements": true,
	"typescript.updateImportsOnFileMove.enabled": "always",

	"workbench.tree.indent": 20,
	"workbench.colorCustomizations": {},
	"workbench.tips.enabled": false,
	"workbench.tree.renderIndentGuides": "always",
	"workbench.view.alwaysShowHeaderActions": true,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.list.horizontalScrolling": true,
	"workbench.iconTheme": "material-icon-theme",

	"editor.unicodeHighlight.nonBasicASCII": false,

	"[xml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"prettier.useTabs": true,
	"liveServer.settings.donotShowInfoMsg": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"liveServer.settings.donotVerifyTags": true,
	"vs-kubernetes": {
		"vscode-kubernetes.kubectl-path.linux": "/home/andre/.vs-kubernetes/tools/kubectl/kubectl",
		"vscode-kubernetes.minikube-path.linux": "/home/andre/.vs-kubernetes/tools/minikube/linux-amd64/minikube",
		"vscode-kubernetes.helm-path.linux": "/home/andre/.vs-kubernetes/tools/helm/linux-amd64/helm"
	},
	"git.autofetch": true,
	"gitlens.advanced.messages": {
		"suppressLineUncommittedWarning": true
	},
	"svg.preview.mode": "img",
	"html.format.wrapLineLength": 140,
	"yaml.format.printWidth": 140,
	"terminal.integrated.enableMultiLinePasteWarning": false,
	"settingsSync.ignoredSettings": [
		"editor.fontFamily"
	]
}
